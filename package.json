{
  "name": "arisanaman",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "contracts:compile": "pnpm --filter @arisanaman/contracts compile",
    "contracts:deploy:sepolia": "pnpm --filter @arisanaman/contracts deploy:sepolia",
    "contracts:deploy:lisk": "pnpm --filter @arisanaman/contracts deploy:lisk",
    "contracts:deploy:local": "pnpm --filter @arisanaman/contracts deploy:local",
    "contracts:node": "pnpm --filter @arisanaman/contracts node",
    "contracts:test": "pnpm --filter @arisanaman/contracts test",
    "indexer:dev": "pnpm --filter @arisanaman/indexer dev",
    "web:dev": "pnpm --filter @arisanaman/web dev"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  }
}
